<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view1"
        android:text="            Alert Dialog"
        android:textSize="30sp"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view2"
        android:text="         Custom Dialog"
        android:textSize="30sp"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view3"
        android:text="        Fragment Dialog"
        android:textSize="30sp"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="        DataPicker  Dialog"
        android:textSize="30sp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view4"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view5"
        android:text="        TimePicker Dialog"
        android:textSize="30sp"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="        BottomSheet Dialog"
        android:textSize="30sp"
        android:layout_margin="25dp"
        android:id="@+id/btn_view6"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:text="               Snackbar"
        android:textSize="30sp"
        android:id="@+id/btn_view7"
        android:background="#2196F3"/>
</LinearLayout>